		height auto
		display block
		width 90%
		img
			width 90%
	.columnas
		height auto
		width 100%
	.contactar
		height auto
		margin 0 auto
		width 90%
	.container
		width 100%
	.datos
		line-height 25px
		margin 0 auto
		margin -1em 0 .5em 0
		width 100%
	.flabia
		img
			height auto
			margin-bottom 1em
